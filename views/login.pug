extends layouts/login-layout.pug

block content
    .loginContainer 
        h1 login
        form(method="post") 

            p.errorMessage #{errorMessage}
            
            input(type="text", name="logUseName",placeholder = "Username or email",value=logUseName, required="")
            input(type="password", name="logPassword",placeholder = "Password", required="")
            input(type="submit", value="Login")
            a(href="/register") Need an account Register;